digraph {
    node [shape=circle, fontname="monospace"];
    edge [arrowsize=0.6, fontname="monospace", fontsize=9];
    layout=circo;
    scale=1.0;
    normalize=true;
    pad=0.2;
    splines=line;

    2 [color="#bbb", fontcolor="#bbb"];
    3, 0, 1, 4 [style="bold"; color=red];
    5, 6, 7 [style="bold"; color=blue];

    3 -> 0 [
        style=bold; 
        color=red; 
        headlabel=<
            <table border="0" cellpadding="2" cellspacing="0">
                <tr>
                    <td>t=4 </td>
                </tr>
            </table>
        >,
        taillabel=<
            <table border="0" cellpadding="2" cellspacing="0">
                <tr>
                    <td>t=3 </td>
                </tr>
            </table>
        >
    ];

    0 -> 1 [
        style=bold; 
        color=red; 
        headlabel=<
            <table border="0" cellpadding="4" cellspacing="0">
                <tr>
                    <td> t=5 </td>
                </tr>
            </table>
        >,
    ];

    1 -> 2 [style=invis];

    1 -> 4 [
        style=bold; 
        color=red; 
        headlabel=<
            <table border="0" cellpadding="1" cellspacing="0">
                <tr>
                    <td>    t=6 </td>
                </tr>
            </table>
        >
    ];

    2 -> 3 [color="#bbb"];

    2 -> 5 [color="#bbb"];

    2 -> 6 [color="#bbb"];

    6 -> 5 [
        style=bold; 
        color=blue; 
        headlabel=<
            <table border="0" cellpadding="1" cellspacing="0">
                <tr>
                    <td>    t=2</td>
                </tr>
            </table>
        >,
    ];

    6 -> 7 [color="#bbb"];

    7 -> 6 [
        style=bold; 
        color=blue; 
        taillabel=<
            <table border="0" cellpadding="1" cellspacing="0">
                <tr>
                    <td> t=0  </td>
                </tr>
            </table>
        >,
        headlabel=<
            <table border="0" cellpadding="1" cellspacing="0">
                <tr>
                    <td>    t=1</td>
                </tr>
            </table>
        >,
    ];
}