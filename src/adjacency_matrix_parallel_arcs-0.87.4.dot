digraph {
    node [shape=circle, fontname=monospace, style=bold, fixedsize=true, width=0.5];
    edge [arrowsize=0.6, fontname=monospace, fontsize=9];
    color=black;
    fontcolor=black;
    bgcolor=white;
    layout=neato;
    mode=sgd;
    maxiter=100000;
    scale=1.0;  
    normalize=true;
    pad=0.2;

    0 -> 1;
    1 -> 2;
    3 -> 2;
    0 -> 1 [style=bold, color=red];
    3 -> 0 [style=invis];
}