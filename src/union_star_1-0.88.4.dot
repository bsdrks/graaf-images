digraph {
    node [
        fixedsize=true;
        fontname="monospace";
        shape=circle;
        width="0.5";
    ];

    edge [
        arrowsize=0.6;
        color=blue;
    ];

    layout=neato;
    mode="sgd";
    normalize=true;
    maxiter=10000;
    pad=0.2;

    0 -> 1;
    0 -> 2;
    0 -> 3;
    0 -> 4;
    1 -> 2 [style=invis];
    1 -> 4 [style=invis];
    2 -> 3 [style=invis];
    3 -> 4 [style=invis];
}