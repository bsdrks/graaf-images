digraph {
    node [shape=circle, fontname=monospace; fixedsize=true, width=0.5];
    edge [arrowsize=0.6];
    color=black;
    fontcolor=black;
    bgcolor=white;
    layout=neato;
    mode=sgd;
    normalize=true;
    maxiter=10000;
    pad=0.2;

    0 -> 1 [style=invis];
    1 -> 2 [style=invis];
    2 -> 3 [style=invis];
    3 -> 0 [style=invis];
}