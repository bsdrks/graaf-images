digraph {
    node [shape=circle, fontname=monospace];
    edge [arrowsize=0.6];
    color=black;
    fontcolor=black;
    bgcolor=white;
    layout=neato;
    mode=sgd;
    normalize=true;
    maxiter=100000;
    scale=1.0;
    pad=0.2;

    0 -> 1;
    1 -> 2;
    3 -> 2;
    0 -> 1 [style=bold, color=red];
    3 -> 0 [style=invis];
}