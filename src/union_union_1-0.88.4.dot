digraph {
    node [
        fixedsize=true;
        fontname=monospace;
        shape=circle;
        width=0.5;
    ];

    edge [
        arrowsize=0.6;
    ];

    color=black;
    fontcolor=black;
    bgcolor=white;
    layout=neato;
    mode=sgd;
    maxiter=10000;
    normalize=true;
    pad=0.2;

    0 -> 1 [dir=both; color=skyblue];
    0 -> 2 [dir=both; color=skyblue];
    0 -> 3 [dir=both; color=skyblue];
    0 -> 4 [dir=both; color=skyblue];
    1 -> 2 [dir=both; color=red];
    1 -> 4 [dir=both; color=red];
    2 -> 3 [dir=both; color=red];
    3 -> 4 [dir=both; color=red];
}