digraph {
    node [shape=circle, fontname=monospace; fixedsize=true, width=0.5];
    edge [arrowsize=0.6];
    color=black;
    fontcolor=black;
    bgcolor=white;
    layout=neato;
    mode=sgd;
    maxiter=1000000;
    normalize=true;
    scale=1.0;
    pad=0.2;

    subgraph {
        0 [style="filled"; color=salmon; fontcolor=white];
    }

    subgraph {
        1, 2, 3 [style="filled"; color=skyblue; fontcolor=white];
    }

    0 -> {1, 2, 3} [dir=both];
}