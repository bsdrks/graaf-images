digraph {
    node [shape=circle, fontname="monospace"];
    edge [arrowsize=0.5, fontname="monospace"];
    layout=circo;
    pad=0.2;

    0 [style=bold];
    1 [style=bold];
    2 [style=bold];
    3 [color=lightgray];

    0 -> 1 [style=bold, color=red];
    1 -> 2 [style=bold, color=red];
    2 -> 3 [style=invis];
    3 -> 0 [color=lightgray];
}