digraph {
    node [shape=circle, fontname="monospace"];
    edge [arrowsize=0.6, fontname="monospace"];
    layout=circo;
    pad=0.2;

    0, 1, 2, 3, 4, 5, 6, 7;

    0 -> 1 [dir=both];
    0 -> {4, 7};
    1 -> {2, 7};
    2 -> 3 [dir=both];
    3 -> {4};
    4 -> {2};
    5 -> {6};
    6 -> {7};
    7 -> {5};
}